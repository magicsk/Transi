<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MHDTableStopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/locating_nearest_stop"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="15dp" />
    <TextView
        android:id="@+id/MHDTableInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:autoLink="web"
        android:visibility="gone"
        android:background="@drawable/round_shape_10"
        app:layout_constraintTop_toBottomOf="@id/MHDTableStopName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/TripPlannerList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/MHDTableInfoText"
        app:layout_constraintBottom_toTopOf="@+id/MHDTableList" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MHDTableList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TripPlannerList" />

</androidx.constraintlayout.widget.ConstraintLayout>