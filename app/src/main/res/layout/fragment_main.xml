<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextFake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/where_you_want_to_go"
        android:inputType="textNoSuggestions"
        android:lines="1"
        android:singleLine="true"
        android:background="@drawable/round_shape"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:focusable="false"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MHDTableStopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Stop name"
        android:textFontWeight="600"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextFake"
        tools:layout_editor_absoluteX="15dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MHDTableList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MHDTableStopName" />

</androidx.constraintlayout.widget.ConstraintLayout>