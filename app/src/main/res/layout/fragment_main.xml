<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MHDTableStopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/locating_nearest_stop"
        android:lines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/MHDTableActualTime"/>
    <TextView
        android:id="@+id/MHDTableActualTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/actualTime"
        android:textSize="18sp"
        android:gravity="end"
        android:lines="1"
        app:layout_constraintStart_toEndOf="@id/MHDTableStopName"
        app:layout_constraintBottom_toBottomOf="@id/MHDTableStopName"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MHDTableInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/MHDTableStopName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/TripPlannerList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/MHDTableList"
        app:layout_constraintTop_toBottomOf="@+id/MHDTableInfoText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MHDTableList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TripPlannerList" />

    <TextView
        android:id="@+id/MHDTableListConnectInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connecting"
        android:fontFamily="@font/roboto_medium"
        android:textSize="26sp"
        android:elevation="5dp"
        android:paddingVertical="7dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/round_shape"
        android:backgroundTint="?colorSurface"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/MHDTableList"
        app:layout_constraintBottom_toBottomOf="@id/MHDTableList"
        app:layout_constraintLeft_toLeftOf="@id/MHDTableList"
        app:layout_constraintRight_toRightOf="@id/MHDTableList"/>

</androidx.constraintlayout.widget.ConstraintLayout>