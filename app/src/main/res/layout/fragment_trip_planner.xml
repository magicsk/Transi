<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripPlannerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TripPlanner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TripPlannerSearch"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TripPlannerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/tripPlanner"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/TripPlannerList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TripPlannerName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tripSearchFragmentLayout"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TripPlannerSearch"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/TripPlannerSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/round_shape_15"
            android:hint="@string/from"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:paddingVertical="6dp"
            android:paddingHorizontal="15dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:autofillHints="none"
            app:layout_constraintBottom_toTopOf="@id/editTextTo"
            app:layout_constraintEnd_toStartOf="@id/switchBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/switchBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="5dp"
            android:contentDescription="@string/enable_disable_switching_table_for_nearest_stop"
            app:icon="@drawable/ic_swap_vert"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toTopOf="@id/editTextTo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/editTextFrom"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@android:color/transparent"/>

        <EditText
            android:id="@+id/editTextTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/round_shape_15"
            android:hint="@string/to"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:autofillHints="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/timeDateBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextFrom"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/timeDateBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="5dp"
            android:contentDescription="@string/pick_a_date_and_time"
            app:icon="@drawable/ic_edit_calendar"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/adPlanBtn"
            app:layout_constraintStart_toEndOf="@+id/editTextTo"
            app:layout_constraintTop_toBottomOf="@+id/editTextFrom"
            app:strokeColor="@android:color/transparent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/adPlanBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="5dp"
            android:contentDescription="@string/display_menu"
            app:icon="@drawable/ic_bus_clock"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timeDateBtn"
            app:layout_constraintTop_toBottomOf="@+id/editTextFrom"
            app:strokeColor="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/progressBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/grayTint"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        />

        <ProgressBar
            android:id="@+id/progressBar_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>